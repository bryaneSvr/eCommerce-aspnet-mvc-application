@model Product

@{
    ViewData["Title"] = "Add a new product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a new product</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ImagePreview" class="border-info" style="max-width:150px"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageURL" class="control-lable"></label>
                        <input asp-for="ImageURL" class="form-control"/>
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-lable"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-lable"></label>
                        <input asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All Products</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function(){
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImageURL").val();
        })

        $("#ImageURL").on("change", function(){
            var output = document.getElementById('ImagePreview');
            output.src = $(this).val();
        })
    </script>
}